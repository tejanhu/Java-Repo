String [] paintarray = new String [4]; 
paintarray[0] = "Mona Lisa";	
paintarray[1] = "Water Lilies";
paintarray[2] = "The Scream";
paintarray[3] = "A young rembrandt";

String Painting;


int vote1= 0;
int vote2= 0;
int vote3= 1;
int vote4= 0;




Painting = JOptionPane.showInputDialog("Which painting do you think is the best?");
int paint=Integer.parseInt(Painting);

while (paint==-33)
{

if (paint == 0) 
{

vote1= vote1+1;

}


if (paint == 1) 
{

vote2= vote2+1;

}


if (paint == 2) 
{

vote3= vote3+1;

}


if (paint == 3) 
{

vote4= vote4+1;

}
else 
{

System.out.println("ERROR!");

  }


} // END while







	
