import javax.swing.*;


class passing 
{



public static void main (String []param)
{
PASS ();

} // END main



public static void PASS (){
String textinput;
int age1,age2;
int averageAge=0;


textinput = JOptionPane.showInputDialog("Give me primary age?");
age1=Integer.parseInt(textinput);
textinput=JOptionPane.showInputDialog("Give me the second age?");
age2= Integer.parseInt(textinput);

averageAge = calculateAverage ( age1,  age2);

System.out.println("Average:   "  + averageAge);


}//END PASS

public static int calculateAverage(int age1, int age2) {
int av;
av=((age1+age2)/2);
return av;
}//END calculateAverage


} //END class passing
