
/* *****************************************
AUTHOR Paul Curzon

A program to demonstrate if  on a boolean value
   Try changing the assignment of test to false to see the difference
******************************************** */

import javax.swing.*; // import the swing library for I/O

class if_boolean
{
    public static void main (String[] param)
    {
        
        testIfTrue();
        System.exit(0);
        
    } // END main


    /* ***************************************************
       Show how the first branch of an if is executed if the test is true
    */
    
    public static void testIfTrue()
    {

       // Declare variables
       //
        boolean test = true;
       
        if (test)
        {
           JOptionPane.showMessageDialog(null, "Yes!!! The first branch was executed and the second ignored");        // Executed if the test is true
        }
        else
        {
            JOptionPane.showMessageDialog(null, "I'll bet this message is never printed");       // Executed if the test is false
        }   
        
        JOptionPane.showMessageDialog(null, "After the IF execution jumps here and continues\n (whichever branch was executed)");                 
       
    } // END testIfTrue
    

} // END class if_boolean
