/* *****************************************AUTHOR Paul CurzonThis program demonstrates  - arrays. - linear search   Search for a given string   ******************************************** */import javax.swing.*; // import the swing library for I/Oclass linearsearch{    public static void main (String[] param)    {                search();        System.exit(0);            } // END main   /* ***************************************************       Define some commands of our own to use above   *************************************************** */            /* ***************************************************       Set up an array containing animals then find one asked for by the user    */        public static void search()    {       // Declare variables       //              String[] animals = {"cat","rat","wombat","cat","bat"};       String searchKey; //the thing looked for       int result = -1;        // the position where the answer is found        //now can get an answer quickly without calculating just looking it up       searchKey = JOptionPane.showInputDialog("Give me an animal to search for");              for (int i=0; i<animals.length; i++)       {           if (animals[i].equals(searchKey))           {              result = i;              }       }       JOptionPane.showMessageDialog(null, searchKey + " was found in position " + result);                } // END search    } // END class linearsearch